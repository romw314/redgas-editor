{
	"name": "redgas-editor",
	"version": "0.0.6",
	"main": "main.js",
	"license": "UNLICENSED",
	"scripts": {
		"start": "electron .",
		"build": "electron-builder build",
		"release": "electron-builder",
		"postinstall": "electron-builder install-app-deps"
	},
	"keywords": [
		"Electron"
	],
	"repository": "github:romw314/redgas-editor",
	"build": {
		"appId": "io.romw314.redgaseditor",
		"productName": "RedGas editor",
		"asar": false,
		"win": {
			"executableName": "RedGas website editor",
			"publish": [
				{
					"provider": "github",
					"channel": "latest"
				}
			],
			"target": ["nsis", "nsis-web", "zip", "msi", "appx"]
		},
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true,
			"license": "LICENSE"
		},
		"nsisWeb": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true,
			"license": "LICENSE"
		},
		"linux": {
			"publish": [
				{
					"provider": "github",
					"channel": "latest"
				}
			],
			"target": ["AppImage", "snap", "deb", "zip"]
		},
		"appImage": {
			"license": "LICENSE"
		}
	},
	"author": "romw314",
	"devDependencies": {
		"electron": "^27.0.0",
		"electron-builder": "^24.6.1"
	},
	"dependencies": {}
}
